    .k-edit-form-container
    {
        width: auto;
    }

    .k-window > div.k-popup-edit-form
    {
        padding: 0;
    }

    .editfieldset
    {
        padding: 2% 1% 1% 6%;
    }

        .editfieldset div
        {
            margin-bottom: 1em;
        }

            .editfieldset div > label
            {
                display: block;
            }
        /*.editaplserv div > label:first-child { font-weight: bold; }*/

    #editTabStrip {
        /*position: absolute;*/
        /*top: 48px;*/
        /*bottom: 60px;*/ 
        left: 0;
        right: 0;
        width: auto;
        height: auto;
        font-size:13px;
    }

    #editTabStrip > .k-content {
        /*position: absolute;*/
        /*top: 38px;*/
        bottom: 0;
