@model TP_Retention_EFDM.ViewModel.EmployeeOnRiskViewModel

@{
    Layout = null;
    ViewBag.ListaRiesgo_Id = Model.RiskList_Id;
}

@*<style scoped></style> solo es soportado por firefox*@
